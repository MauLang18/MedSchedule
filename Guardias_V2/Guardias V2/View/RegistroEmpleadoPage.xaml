<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guardias_V2.View.RegistroEmpleadoPage"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="80,*"
          BackgroundColor="#white">
        <StackLayout Orientation="Horizontal"
                     Margin="10">
            <Image Source="flechavolver.png"
                   Margin="10">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Volvercommand}" />
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
        <StackLayout Grid.Row="1"
                     Margin="10">
            <StackLayout Orientation="Horizontal">
                <Label Text="Nombre:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese el nombre"
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="Start"
                       Text="{Binding Nombre}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Primer Apellido:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese el apellido"
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="Start"
                       Text="{Binding Apellido1}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Segundo Apellido:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese el apellido "
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="Start"
                       Text="{Binding Apellido2}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Identificacion:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese la identificacion"
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="Start"
                       Text="{Binding Identificacion}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Telefono:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese el telefono"
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="Start"
                       Text="{Binding Telefono}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Correo:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese correo"
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="Start"
                       Text="{Binding Correo}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Direccion:"
                       TextColor="Black"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />
                <Entry Placeholder="Ingrese la direccion"
                       FontAttributes="Bold"
                       TextColor="Black"
                       PlaceholderColor="Black"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Direccion}" />
            </StackLayout>
            <Grid RowDefinitions="50,*">
                <Frame Grid.Row="1"
                       WidthRequest="250"
                       HorizontalOptions="Center"
                       CornerRadius="15"
                       Margin="0,-38,0,0">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="1,0">
                            <GradientStop Color="#00d4ff"
                                          Offset="0.1" />
                            <GradientStop Color="#090979"
                                          Offset="0.8" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Nombre}"
                                   FontSize="15" />
                            <Label Text="{Binding Apellido1}"
                                   FontSize="15" />
                            <Label Text="{Binding Apellido2}"
                                   FontSize="15" />
                        </StackLayout>
                        <Label Text="{Binding Identificacion}" />
                        <Label Text="{Binding Telefono}" />
                        <Label Text="{Binding Correo}" />
                        <Label Text="{Binding Direccion}" />
                    </StackLayout>
                </Frame>
            </Grid>
            <Frame HorizontalOptions="Center"
                   Padding="6"
                   Margin="0,30,0,0"
                   CornerRadius="15"
                   HasShadow="False"
                   BackgroundColor="#FFE548">
                <Button Text="+"
                        HorizontalOptions="Center"
                        BackgroundColor="#FFE15D"
                        BorderColor="#FFF288"
                        BorderWidth="6"
                        CornerRadius="15"
                        FontAttributes="Bold"
                        FontSize="25"
                        WidthRequest="60"
                        HeightRequest="60"
                        Command="{Binding Insertarcommand}" />
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>